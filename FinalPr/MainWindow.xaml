<Window x:Class="FinalPr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalPr"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewFile_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open" Click="OpenFile_Click" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save" Click="SaveFile_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As" Click="SaveAsFile_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="Undo_Click" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Click="Redo_Click" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="_Find" Click="Find_Click" InputGestureText="Ctrl+F"/>
                <MenuItem Header="_Replace" Click="Replace_Click" InputGestureText="Ctrl+H"/>
                <Separator/>
                <MenuItem Header="Select _All" Click="SelectAll_Click" InputGestureText="Ctrl+A"/>
            </MenuItem>
            <MenuItem Header="_Format">
                <MenuItem Header="_Font" Click="FontDialog_Click"/>
                <MenuItem Header="_Text Color" Click="TextColor_Click"/>
                <MenuItem Header="_Background Color" Click="BackgroundColor_Click"/>
                <Separator/>
                <MenuItem Header="_Bold" Click="Bold_Click" InputGestureText="Ctrl+B"/>
                <MenuItem Header="_Italic" Click="Italic_Click" InputGestureText="Ctrl+I"/>
                <MenuItem Header="_Underline" Click="Underline_Click" InputGestureText="Ctrl+U"/>
            </MenuItem>
            <MenuItem Header="_Insert">
                <MenuItem Header="_Image" Click="InsertImage_Click"/>
                <MenuItem Header="_Bullet List" Click="BulletList_Click"/>
                <MenuItem Header="_Numbered List" Click="NumberedList_Click"/>
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1" Background="WhiteSmoke">
            <Button Click="NewFile_Click" ToolTip="New File">
                <Image Source="pack://application:,,,/Images/new.png" Width="16" Height="16"/>
            </Button>
            <Button Click="OpenFile_Click" ToolTip="Open File">
                <Image Source="pack://application:,,,/Images/open.png" Width="16" Height="16"/>
            </Button>
            <Button Click="SaveFile_Click" ToolTip="Save File">
                <Image Source="pack://application:,,,/Images/save.png" Width="16" Height="16"/>
            </Button>
            <Separator/>

            <Button Click="Bold_Click" ToolTip="Bold" Name="BoldButton">
                <TextBlock Text="B" FontWeight="Bold"/>
            </Button>
            <Button Click="Italic_Click" ToolTip="Italic" Name="ItalicButton">
                <TextBlock Text="I" FontStyle="Italic"/>
            </Button>
            <Button Click="Underline_Click" ToolTip="Underline" Name="UnderlineButton">
                <TextBlock Text="U" TextDecorations="Underline"/>
            </Button>
            <Separator/>

            <ComboBox Name="FontFamilyComboBox" Width="150" SelectionChanged="FontFamily_Changed"/>
            <ComboBox Name="FontSizeComboBox" Width="60" SelectionChanged="FontSize_Changed"/>
            <Separator/>

            <Button Click="TextColor_Click" ToolTip="Text Color" Background="Black" Width="30" Height="20" Name="TextColorButton"/>
            <Button Click="BackgroundColor_Click" ToolTip="Background Color" Background="White" Width="30" Height="20" Name="BackgroundColorButton"/>
        </ToolBar>

        <Grid Grid.Row="2" Name="SearchPanel" Visibility="Collapsed" Background="LightYellow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Find:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="FindTextBox" Margin="5" Height="25"/>
            <TextBlock Grid.Column="2" Text="Replace:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Column="3" Name="ReplaceTextBox" Margin="5" Height="25"/>
            <Button Grid.Column="4" Content="Find Next" Click="FindNext_Click" Margin="5"/>
            <Button Grid.Column="5" Content="Replace" Click="ReplaceOne_Click" Margin="5"/>
            <Button Grid.Column="6" Content="Close" Click="CloseSearch_Click" Margin="5"/>
        </Grid>

        <RichTextBox Grid.Row="3" Name="MainTextBox" 
                     AcceptsReturn="True" 
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     SelectionChanged="MainTextBox_SelectionChanged"
                     Margin="5"/>

        <StatusBar Grid.Row="4" Background="LightGray">
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="CursorPositionText" Text="Line 1, Column 1"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
