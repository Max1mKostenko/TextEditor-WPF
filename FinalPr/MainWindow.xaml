<Window x:Class="FinalPr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalPr"
        mc:Ignorable="d"
        Title="Text Editor" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewFile_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open" Click="OpenFile_Click" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save" Click="SaveFile_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As" Click="SaveAsFile_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="Undo_Click" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Click="Redo_Click" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="_Find" Click="Find_Click" InputGestureText="Ctrl+F"/>
                <MenuItem Header="_Replace" Click="Replace_Click" InputGestureText="Ctrl+H"/>
                <Separator/>
                <MenuItem Header="Select _All" Click="SelectAll_Click" InputGestureText="Ctrl+A"/>
            </MenuItem>
            <MenuItem Header="_Format">
                <MenuItem Header="_Font" Click="FontDialog_Click"/>
                <MenuItem Header="_Text Color" Click="TextColor_Click"/>
                <MenuItem Header="_Background Color" Click="BackgroundColor_Click"/>
                <Separator/>
                <MenuItem Header="_Bold" Click="Bold_Click" InputGestureText="Ctrl+B"/>
                <MenuItem Header="_Italic" Click="Italic_Click" InputGestureText="Ctrl+I"/>
                <MenuItem Header="_Underline" Click="Underline_Click" InputGestureText="Ctrl+U"/>
            </MenuItem>
            <MenuItem Header="_Insert">
                <MenuItem Header="_Image" Click="InsertImage_Click"/>
                <MenuItem Header="_Bullet List" Click="BulletList_Click"/>
                <MenuItem Header="_Numbered List" Click="NumberedList_Click"/>
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1" Background="WhiteSmoke" Padding="5">
            <Button Click="NewFile_Click" ToolTip="New File (Ctrl+N)" Padding="5">
                <TextBlock Text="📄" FontSize="16"/>
            </Button>
            <Button Click="OpenFile_Click" ToolTip="Open File (Ctrl+O)" Padding="5">
                <TextBlock Text="📂" FontSize="16"/>
            </Button>
            <Button Click="SaveFile_Click" ToolTip="Save File (Ctrl+S)" Padding="5">
                <TextBlock Text="💾" FontSize="16"/>
            </Button>
            <Separator/>

            <Button Click="Bold_Click" ToolTip="Bold (Ctrl+B)" Name="BoldButton" Padding="5" MinWidth="30">
                <TextBlock Text="B" FontWeight="Bold" FontSize="14"/>
            </Button>
            <Button Click="Italic_Click" ToolTip="Italic (Ctrl+I)" Name="ItalicButton" Padding="5" MinWidth="30">
                <TextBlock Text="I" FontStyle="Italic" FontSize="14"/>
            </Button>
            <Button Click="Underline_Click" ToolTip="Underline (Ctrl+U)" Name="UnderlineButton" Padding="5" MinWidth="30">
                <TextBlock Text="U" TextDecorations="Underline" FontSize="14"/>
            </Button>
            <Separator/>

            <TextBlock Text="Font:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Name="FontFamilyComboBox" Width="150" SelectionChanged="FontFamily_Changed" VerticalAlignment="Center"/>
            <TextBlock Text="Size:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Name="FontSizeComboBox" Width="60" SelectionChanged="FontSize_Changed" VerticalAlignment="Center"/>
            <Separator/>

            <TextBlock Text="Color:" VerticalAlignment="Center" Margin="5,0"/>
            <Button Click="TextColor_Click" ToolTip="Text Color" Background="Black" Width="30" Height="20" Name="TextColorButton" BorderBrush="Gray" BorderThickness="1"/>
            <TextBlock Text="Background:" VerticalAlignment="Center" Margin="5,0"/>
            <Button Click="BackgroundColor_Click" ToolTip="Background Color" Background="Yellow" Width="30" Height="20" Name="BackgroundColorButton" BorderBrush="Gray" BorderThickness="1"/>
        </ToolBar>

        <Grid Grid.Row="2" Name="SearchPanel" Visibility="Collapsed" Background="LightYellow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Find:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="FindTextBox" Margin="5" Height="25" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="Replace:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Column="3" Name="ReplaceTextBox" Margin="5" Height="25" VerticalAlignment="Center"/>
            <Button Grid.Column="4" Content="Find Next" Click="FindNext_Click" Margin="5" Padding="10,3"/>
            <Button Grid.Column="5" Content="Replace" Click="ReplaceOne_Click" Margin="5" Padding="10,3"/>
            <Button Grid.Column="6" Content="✕" Click="CloseSearch_Click" Margin="5" Padding="10,3" ToolTip="Close"/>
        </Grid>

        <RichTextBox Grid.Row="3" Name="MainTextBox"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     SelectionChanged="MainTextBox_SelectionChanged"
                     Margin="5"
                     FontFamily="Arial"
                     FontSize="12"/>

        <StatusBar Grid.Row="4" Background="LightGray">
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="CursorPositionText" Text="Line 1, Column 1"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>